{
  "name": "description",
  "displayName": "Description",
  "description": "A flexible component for displaying structured information with two distinctive variants: basic and bordered.",
  "type": "component",
  "category": "data-display",
  "version": "1.0.0",
  "author": "piperubio",
  "license": "MIT",
  "keywords": ["description", "data-display", "information", "key-value", "structured"],
  "dependencies": [
    "@radix-ui/react-slot",
    "class-variance-authority",
    "clsx",
    "tailwind-merge"
  ],
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "files": [
    {
      "name": "description.tsx",
      "path": "components/description/description.tsx",
      "type": "component",
      "target": "components/ui/description.tsx"
    }
  ],
  "registryDependencies": [
    "card"
  ],
  "props": {
    "Description": [
      {
        "name": "title",
        "type": "string",
        "description": "Optional title for the section",
        "required": false
      },
      {
        "name": "variant",
        "type": "'basic' | 'bordered'",
        "description": "Visual variant of the component",
        "default": "basic",
        "required": false
      },
      {
        "name": "columns",
        "type": "1 | 2 | 3",
        "description": "Number of responsive columns",
        "default": 3,
        "required": false
      },
      {
        "name": "className",
        "type": "string",
        "description": "Additional CSS classes",
        "required": false
      },
      {
        "name": "children",
        "type": "ReactNode",
        "description": "DescriptionItem or DescriptionSection elements",
        "required": true
      }
    ],
    "DescriptionItem": [
      {
        "name": "label",
        "type": "string",
        "description": "Field label",
        "required": true
      },
      {
        "name": "value",
        "type": "ReactNode",
        "description": "Field value (can be JSX)",
        "required": true
      },
      {
        "name": "span",
        "type": "1 | 2 | 3",
        "description": "Number of columns the element spans",
        "default": 1,
        "required": false
      },
      {
        "name": "className",
        "type": "string",
        "description": "Additional CSS classes",
        "required": false
      }
    ],
    "DescriptionSection": [
      {
        "name": "label",
        "type": "string",
        "description": "Section label",
        "required": true
      },
      {
        "name": "children",
        "type": "ReactNode",
        "description": "Section content",
        "required": true
      },
      {
        "name": "className",
        "type": "string",
        "description": "Additional CSS classes",
        "required": false
      }
    ]
  },
  "examples": [
    {
      "name": "basic",
      "title": "Basic usage",
      "description": "Simple example with basic variant",
      "code": "import { Description, DescriptionItem } from \"@/components/ui/description\";\n\n<Description title=\"User Profile\" variant=\"basic\">\n  <DescriptionItem label=\"Name\" value=\"John Doe\" />\n  <DescriptionItem label=\"Email\" value=\"john@example.com\" />\n  <DescriptionItem label=\"Role\" value=\"Administrator\" />\n</Description>"
    },
    {
      "name": "bordered",
      "title": "Bordered variant",
      "description": "Example with bordered variant for structured data",
      "code": "import { Description, DescriptionItem, DescriptionSection } from \"@/components/ui/description\";\n\n<Description title=\"Service Details\" variant=\"bordered\" columns={3}>\n  <DescriptionItem label=\"Service\" value=\"Cloud Database\" />\n  <DescriptionItem label=\"Plan\" value=\"Professional\" />\n  <DescriptionItem label=\"Status\" value=\"Active\" />\n  <DescriptionSection label=\"Configuration\">\n    <div>Database: PostgreSQL 14</div>\n    <div>Storage: 100 GB SSD</div>\n  </DescriptionSection>\n</Description>"
    },
    {
      "name": "responsive",
      "title": "Responsive columns",
      "description": "Example with different numbers of columns",
      "code": "import { Description, DescriptionItem } from \"@/components/ui/description\";\n\n<Description title=\"Contact Info\" columns={2}>\n  <DescriptionItem label=\"Name\" value=\"Jane Smith\" />\n  <DescriptionItem label=\"Email\" value=\"jane@company.com\" />\n  <DescriptionItem label=\"Phone\" value=\"+1 (555) 123-4567\" />\n  <DescriptionItem label=\"Address\" value=\"123 Main St, Anytown, USA\" span={2} />\n</Description>"
    }
  ],
  "features": [
    "Two variants: basic and bordered",
    "Support for 1-3 responsive columns",
    "Customizable column spanning",
    "ReactNode values for rich content",
    "Grouped sections",
    "Full TypeScript typing",
    "Built-in accessibility",
    "Fully customizable with CSS"
  ],
  "useCases": [
    "User profiles",
    "Service configurations",
    "Product details",
    "Contact information",
    "File metadata",
    "Technical specifications"
  ]
}