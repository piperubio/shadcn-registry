---
import DemoMenu from "../components/demo/demo-menu.astro";
import BaseLayout from "../layouts/base-layout.astro";
import InstallCommand from "../components/install-command.astro";
---

<BaseLayout>
  <DemoMenu currentPath={Astro.url.pathname} />
  <!-- Component index: list of components (auto-generated) -->
  <main class="max-w-6xl mx-auto p-6">
    <h1 class="text-3xl font-bold mb-4">Component Registry</h1>
    <p class="text-muted-foreground mb-6">List of available components in this registry.</p>

    <ul class="grid md:grid-cols-2 gap-4">
      <li>
        <a href="/components/description" class="block rounded-lg border p-4 hover:shadow-md transition-shadow focus:outline-none focus:ring-2 focus:ring-primary" aria-label="Open Description component page">
          <div class="font-medium">Description</div>
          <p class="text-sm text-muted-foreground mt-2">React component demo with layout and span variants.</p>
        </a>
      </li>
      <li>
        <a href="/components/header" class="block rounded-lg border p-4 hover:shadow-md transition-shadow focus:outline-none focus:ring-2 focus:ring-primary" aria-label="Open Header component page">
          <div class="font-medium">Header</div>
          <p class="text-sm text-muted-foreground mt-2">Astro reusable header demo with dropdown and drawer modes.</p>
        </a>
      </li>
    </ul>
  </main>
</BaseLayout>
