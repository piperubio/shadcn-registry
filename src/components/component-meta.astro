---
import InstallCommand from "./install-command.astro";
const { item } = Astro.props as { item: any };
---

<section class="component-meta mb-6">
  <header class="mb-4">
    <h1 class="text-3xl font-bold mb-2">{item.title ?? item.name}</h1>
    {item.description ? <p class="text-muted-foreground mb-4">{item.description}</p> : null}
    <InstallCommand name={item.name} className="mb-4" />
  </header>

  <div class="rounded-xl border bg-card p-4 text-sm text-muted-foreground">
    <div><strong>Framework:</strong> {item.meta?.framework ?? 'unknown'}</div>
    {item.dependencies ? <div><strong>Dependencies:</strong> {item.dependencies.join(', ')}</div> : null}
    {item.registryDependencies ? <div><strong>Registry dependencies:</strong> {item.registryDependencies.join(', ')}</div> : null}
    {item.files ? (
      <div class="mt-2">
        <strong>Files:</strong>
        <ul class="list-disc ml-6">
          {item.files.map((f: any) => <li>{f.path}</li>)}
        </ul>
      </div>
    ) : null}
  </div>
</section>
