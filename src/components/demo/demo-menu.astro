---
interface DemoMenuItem {
  label: string;
  href: string;
  description: string;
}

interface Props {
  currentPath: string;
}

const { currentPath } = Astro.props as Props;

const items: DemoMenuItem[] = [
  {
    label: "Header",
    href: "/demo/header",
    description: "Astro reusable header demo with dropdown and drawer modes.",
  },
];
---

<nav aria-label="Site header" class="border-b bg-background/95 backdrop-blur sticky top-0 z-40">
  <div class="max-w-6xl mx-auto px-6 py-3">
    <div class="flex items-center justify-between">
      <!-- Site title / home link -->
      <a href="/" class="flex items-center gap-3" aria-label="Home">
        <img src="/img/logo.svg" alt="site logo" class="hidden md:block h-8 w-auto" />
        <span class="text-lg font-semibold text-gray-800">shadcn registry by piperubio</span>
      </a>

      <!-- Demo items (secondary navigation) -->
      <div class="flex items-center gap-3">
        {
          items.map((item) => {
            const isActive = currentPath === item.href;
            return (
              <a
                href={item.href}
                class={`inline-flex items-center rounded-md px-3 py-1.5 text-sm transition-colors focus:outline-none focus:ring-2 focus:ring-primary ${
                  isActive
                    ? "bg-primary text-primary-foreground border border-primary"
                    : "bg-background hover:bg-muted border border-border"
                }`}
                title={item.description}
                aria-current={isActive ? 'page' : undefined}
              >
                {item.label}
              </a>
            );
          })
        }
      </div>
    </div>
  </div>
</nav>
