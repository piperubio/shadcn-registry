---
interface DemoMenuItem {
  label: string;
  href: string;
  description: string;
}

interface Props {
  currentPath: string;
}

const { currentPath } = Astro.props as Props;

const items: DemoMenuItem[] = [
  {
    label: "Header",
    href: "/demo/header",
    description: "Astro reusable header demo with dropdown and drawer modes.",
  },
];
---

<nav aria-label="Site header" class="border-b bg-background/95 backdrop-blur sticky top-0 z-40">
  <div class="max-w-6xl mx-auto px-6 py-3">
    <div class="flex items-center justify-between">
      <!-- Site title / home link -->
      <a href="/" class="flex items-center gap-3" aria-label="Home">
        <img src="/img/logo.svg" alt="site logo" class="hidden md:block h-8 w-auto" />
        <span class="text-lg font-semibold text-gray-800">shadcn registry by piperubio</span>
      </a>
      
      <!-- Empty placeholder to keep header balanced on large screens -->
      <div aria-hidden="true" class="hidden md:block w-24"></div>
    </div>
  </div>
</nav>
